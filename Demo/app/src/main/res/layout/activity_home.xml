<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="rohan27.demo.HomeActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exit"
        android:textColor="#FF0000"
        android:background="@drawable/border"
        android:onClick="exit"
        android:id="@+id/button_Exit"
        android:layout_gravity="left|bottom"

        android:layout_marginTop="98dp"
        android:layout_below="@+id/button5"
        android:layout_toRightOf="@+id/button5"
        android:layout_toEndOf="@+id/button5" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="high score"
        android:textColor="#228b22"
        android:background="@drawable/border"
        android:onClick="high_score"
        android:id="@+id/button_score"
        android:layout_gravity="left|bottom"
        android:layout_alignTop="@+id/button_Exit"
        android:layout_toLeftOf="@+id/button5"
        android:layout_toStartOf="@+id/button5" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2 Players"
        android:background="@drawable/border"
        android:id="@+id/button5"
        android:onClick="p2p_start"
        android:textColor="#0000FF"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1 Player"
        android:background="@drawable/border"
        android:onClick="show_levels"
        android:id="@+id/button"
        android:textColor="#0000FF"
        android:layout_marginBottom="59dp"
        android:layout_gravity="center_horizontal|top"

        android:layout_above="@+id/button5"
        android:layout_alignLeft="@+id/button5"
        android:layout_alignStart="@+id/button5" />

</RelativeLayout>
